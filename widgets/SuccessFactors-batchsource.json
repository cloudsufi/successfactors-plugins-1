{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "SAP SuccessFactors",
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName",
          "widget-attributes": {
            "placeholder": "Used to uniquely identify this source for lineage, annotating metadata etc."
          }
        },
        {
          "widget-type": "textbox",
          "label": "SAP SuccessFactors Base URL",
          "name": "baseURL",
          "widget-attributes": {
            "placeholder": "SAP SuccessFactors base url e.g. https://<hostname>/odata/v2"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Entity Name",
          "name": "entityName",
          "widget-attributes": {
            "placeholder": "SAP SuccessFactors Entity name. Eg. People"
          },
          "plugin-function": {
            "method": "POST",
            "widget": "outputSchema",
            "plugin-method": "getSchema"
          }
        }
      ]
    },
    {
      "label": "Credentials",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "SAP SuccessFactors Logon Username",
          "name": "username",
          "widget-attributes": {
            "placeholder": ""
          }
        },
        {
          "widget-type": "password",
          "label": "SAP SuccessFactors Logon Password",
          "name": "password",
          "widget-attributes": {
            "placeholder": ""
          }
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [
        {
          "widget-type": "textarea",
          "label": "Filter Options",
          "name": "filterOption",
          "widget-attributes": {
            "placeholder": "Eg. Price gt 200"
          }
        },
        {
          "widget-type": "textarea",
          "label": "Select Fields",
          "name": "selectOption",
          "widget-attributes": {
            "placeholder": "Eg. Category,Price,Name,Supplier/Address"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Expand Fields",
          "name": "expandOption",
          "widget-attributes": {
            "placeholder": "Eg. Products,Products/Suppliers"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Associated Entity Name",
          "name": "associatedEntityName",
          "widget-attributes": {
            "placeholder": "SAP SuccessFactors Associated Entity name. Eg: EmpCompensationCalculated"
          }
        },
        {
          "widget-type": "radio-group",
          "label": "Pagination Type",
          "name": "paginationType",
          "widget-attributes": {
            "layout": "inline",
            "default": "serverSide",
            "options": [
              {
                "id": "serverSide",
                "label": "Server-Side Pagination"
              },
              {
                "id": "clientSide",
                "label": "Client-Side Pagination"
              }
            ]
          }
        }
      ]
    }
  ]
}
